{{! lista de todos los productos agregados }}
<h1>Lista de productos, no real time</h1>

{{#each products}}
  <ul>
    <li>title: {{title}}</li>
    <li>description: {{description}}</li>
    <li>code: {{code}} </li>
    <li>price: {{price}} </li>
    <li>status: {{status}} </li>
    <li>stock: {{stock}} </li>
    <li>category: {{category}} </li>
    <li>thumbnails: {{thumbnails}} </li>
    <li>id: {{id}} </li>
    <button onclick="" >Agregar al carrito</button>
  </ul>
{{/each}}
{{#if paginate.hasPrevPage}}
  <a href="/products?page= {{paginate.prevPage}}">{{paginate.prevPage}}</a>
{{/if}}
<a> {{paginate.page}} </a>
{{#if paginate.hasNextPage}}
<a href="/products?page= {{paginate.nextPage}}">{{paginate.nextPage}}</a>
{{/if}}
